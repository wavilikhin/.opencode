{
  "tui": {
    "scroll_acceleration": { "enabled": true },
    "diff_style": "auto"
  },
  "compaction": {
    "prune": false
  },
  "small_model": "github-copilot/gpt-4.1",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "playwright-plus": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@ai-coding-labs/playwright-mcp-plus@latest",
        "--project-isolation"
      ],
      "enabled": false
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
